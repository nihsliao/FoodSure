<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.foodsure.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_add_foodItem"
            app:destination="@id/nav_add_food" />
    </fragment>

    <fragment
        android:id="@+id/nav_tag"
        android:name="com.example.foodsure.ui.tag.TagFragment"
        android:label="@string/menu_tag"
        tools:layout="@layout/fragment_tag" />

    <fragment
        android:id="@+id/nav_add_food"
        android:name="com.example.foodsure.ui.foodeditform.FoodEditFormFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_edit_food">
        <argument
            android:name="foodItemId"
            android:defaultValue="-1L"
            app:argType="long" />
        <argument
            android:name="title"
            android:defaultValue="Add Food"
            app:argType="string" />
    </fragment>
</navigation>